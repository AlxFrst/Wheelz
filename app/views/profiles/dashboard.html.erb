<div class="dashboard">
  <div class="row">
    <div class="col-3 sidebar">
      <%= link_to root_path, class: "navbar-brand mt-5" do %>
        <h1>Wheelz</h1>
      <% end %>
      <p><%= link_to "Profil", dashboard_path %></p>
      <hr>
      <p><%= link_to "My cars", dashboard_my_car_path %></p>
      <hr>
      <p><%= link_to "Bookings", dashboard_booking_path %></p>
    </div>
    <div class="col-9 dashboard-content">
      <div class="container header d-flex justify-content-between my-3">
        <h3>Profil</h3>
        <div class="avatar-menu d-flex">
          <p><%= current_user.first_name %> <%= current_user.last_name %></p>
          <ul class="user-profil">
            <li class="nav-item dropdown">
              <% if current_user.avatar.key.nil? %>
                <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTgsaRe2zqH_BBicvUorUseeTaE4kxPL2FmOQ&usqp=CAU", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
              <% else %>
                <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Home", root_path, class: "dropdown-item" %>
                <%= link_to "Disconnect", destroy_user_session_path, method:'delete', class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <div class="container body-content dashboard-body my-3">
        <div>
          <h4>Your profil</h4>
          <hr>
        </div>
        <div class="d-flex justify-content-evenly">
          <div>
            <ul>
              <li>First name : <span class="light-li"><%= current_user.first_name %></span></li>
              <li>Last name : <span class="light-li"><%= current_user.last_name %></span></li>
              <li>Username : <span class="light-li"><%= current_user.username %></span></li>
              <li>Email : <span class="light-li"><%= current_user.email %></span></li>
              <li>Birthday : <span class="light-li"><%= current_user.birthday %></span></li>
              <li>Street : <span class="light-li"><%= current_user.street %></span></li>
              <li>City : <span class="light-li"><%= current_user.city %></span></li>
              <li>Postal : <span class="light-li"><%= current_user.postal_code %></span></li>
              <li>Country : <span class="light-li"><%= current_user.country %></span></li>
              <li>Phone number : <span class="light-li"><%= current_user.phone %></span></li>
            </ul>
          </div>
          <div class="profil">
            <h5>Profil picture</h5>
            <div class="mt-5">
              <% if current_user.avatar.key.nil? %>
                <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTgsaRe2zqH_BBicvUorUseeTaE4kxPL2FmOQ&usqp=CAU", class:'profile-img'%>
              <% else %>
                <%= cl_image_tag current_user.avatar.key %>
              <% end %>
            </div>
            <button type="button" class="btn button-dashboard">Modify your profil</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
