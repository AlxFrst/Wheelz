<%= simple_form_for [ @car, @booking ] do |f| %>
  <%= f.input :start_date, as: :date, html5: true, input_html: { :value => @start_date} %>
  <%= f.input :end_date, as: :date, html5: true, input_html: { :value => @end_date} %>
  <%= f.input :comment, input_html: { :value => @comment} %>
  <%= f.input :kilometers, input_html: { :value => @kilometers} %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Reserver maintenant", class: "btn btn-primary" %>
<% end %>
