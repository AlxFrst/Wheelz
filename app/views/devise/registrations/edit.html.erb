<div class="row justify-content-center custom-top-signup custom-footer">
  <div class="col-7">
   <h2>Modifie ton profil</h2>
    <div class="container devise-user-form mt-3">
       <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :street,:label => 'Rue' %>
        <%= f.input :city,:label => 'Ville' %>
        <%= f.input :postal_code,:label => 'Code postal' %>
        <%= f.input :password,
                    :label => 'Mot de passe',
                    hint: "laissez le champ blanc si vous ne voulez pas modifier le mot de passe",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    :label => 'Confirmation du mot de passe',
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    :label => 'Mot de passe actuel',
                    hint: "Nous avons besoin du mot de passe actuel pour confirmer les modifications",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Modifier", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="mt-3">
      <h3>Supprimer son compte</h3>
      <p>Pas content? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
    <%= link_to "Revenir en arriÃ¨re", :back %>
    </div>
  </div>
</div>
