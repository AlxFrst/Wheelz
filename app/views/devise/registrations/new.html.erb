<div class="row justify-content-center custom-top-signup custom-footer">
  <div class="col-7">
   <h2>Inscris-toi</h2>
    <div class="container devise-user-form mt-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name,
                required: true,
                autofocus: true,
                :label => 'PrÃ¨nom',
                input_html: { autocomplete: "first-name" }%>
          <%= f.input :last_name,
                required: true,
                autofocus: true,
                :label => 'Nom de famille',
                input_html: { autocomplete: "last-name" }%>
          <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>
          <%= f.input :avatar, as: :file %>
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                required: true,
                :label => 'Mot de passe',
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                required: true,
                :label => 'Mot de passe confirmation',
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :birthday, as: :date, html5: true ,
                :label => 'Date d\'anniversaire',
                required: true %>
          <%= f.input :country,:label => 'Pays', as: :country %>
          <%= f.input :street,
                required: true,
                :label => 'Rue',
                autofocus: true,
                input_html: { autocomplete: "street" }%>
          <%= f.input :postal_code,
                required: true,
                :label => 'Code postal',
                autofocus: true,
                input_html: { autocomplete: "postal_code" }%>
          <%= f.input :city,
                required: true,
                :label => 'Ville',
                autofocus: true,
                input_html: { autocomplete: "city" }%>
          <%= f.input :license,:label => 'Permis de conduire',
                required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class:"signup" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
