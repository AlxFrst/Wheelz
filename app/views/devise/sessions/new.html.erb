
<div class="row justify-content-center custom-top-signup custom-footer">
  <div class="col-7">
  <h2>Connectez-vous</h2>
    <div class="container devise-user-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                :label => 'Mot de passe',
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,:label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:'btn btn-primary' %>
          <%= link_to "Mot de passe oubliÃ© ?", edit_user_password_path%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% session[:params] = params %>
