<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <h1>Wheelz</h1>
    <% end %>
    <div class="search-bar">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat search-logo">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="nav-buttons d-flex justify-content-between">
        <%= link_to "Sign up", "#", class: "nav-link signup" %>
        <%= link_to "Login", "#", class: "nav-link login" %>
      </div>
    </div>
  </div>
</div>
