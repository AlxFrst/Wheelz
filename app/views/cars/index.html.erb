<div class="container">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-between">
      <h3 class="car-counter">Cars (<%= @cars.count %>)</h3>
      <div class="filter-button">
        <i class="fas fa-filter"></i>
        <%= link_to "Filter", "#", class: "car-filter" %>
      </div>
    </div>
  </div>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4 my-2">
  <% @cars.each do |car| %>
    <div class="col">
      <div class="card">
        <% if car.photos.length > 0 %>
          <%= cl_image_tag car.photos[0].key, class:'card-img-top', id: "car-img"%>
        <% else %>
          <img src="https://cdn.motor1.com/images/mgl/nGzgl/s1/2021-bugatti-chiron-front.jpg" id="car-img" class="card-img-top">
        <% end %>
        <div class="card-body">
          <div class="card-header d-flex justify-content-between">
            <h3><%= car.brand %> <%= car.model %></h3>
            <div class="rating">
              <p>4.95 ⭐</p>
            </div>
          </div>
          <p class="card-text">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Accusantium quod earum doloribus, reiciendis culpa voluptatem corrupti veniam numquam sit, tenetur blanditiis autem pariatur nesciunt, consectetur deleniti quasi quis unde reprehenderit!</p>
          <div class="spec d-flex justify-content-between m-3">
            <p><%= car.horsepower %>hp</p>
            <p><%= car.energy %></p>
            <p><%= car.seats %> seats</p>
          </div>
          <div class="price d-flex justify-content-between">
            <h4><%= car.price%>€/<span class="days"> days</span></h4>
            <%= link_to 'see more', car_path(car)%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
